<jasperReport
		 name="reportePERControlClienteMontoPago"
		 columnCount="1"
		 printOrder="Vertical"
		 orientation="Portrait"
		 pageWidth="535"
		 pageHeight="842"
		 columnWidth="535"
		 columnSpacing="0"
		 leftMargin="0"
		 rightMargin="0"
		 topMargin="0"
		 bottomMargin="0"
		 whenNoDataType="NoPages"
		 isTitleNewPage="false"
		 isSummaryNewPage="false">
	<property name="ireport.scriptlethandling" value="0" />
	<property name="ireport.encoding" value="UTF-8" />
	<import value="java.util.*" />
	<import value="net.sf.jasperreports.engine.*" />
	<import value="net.sf.jasperreports.engine.data.*" />

	<parameter name="saldo" isForPrompting="false" class="java.math.BigDecimal"/>
	<parameter name="parameterMap" isForPrompting="false" class="java.util.Map"/>
	<parameter name="codigoPais" isForPrompting="false" class="java.lang.String">
		<defaultValueExpression ><![CDATA[$P{parameterMap}.get("codigoPais")]]></defaultValueExpression>
	</parameter>
	<parameter name="fechaDesde" isForPrompting="false" class="java.lang.String">
		<defaultValueExpression ><![CDATA[$P{parameterMap}.get("fechaDesde")]]></defaultValueExpression>
	</parameter>
	<parameter name="fechaHasta" isForPrompting="false" class="java.lang.String">
		<defaultValueExpression ><![CDATA[$P{parameterMap}.get("fechaHasta")]]></defaultValueExpression>
	</parameter>
	<parameter name="documento" isForPrompting="false" class="java.lang.String"/>
	<parameter name="MONTO_PERC" isForPrompting="false" class="java.math.BigDecimal"/>
	<queryString><![CDATA[SELECT SUM(PER.MON_PERC) AS MONTO_PERC,      
       SUM(PER.MON_PAGO) AS MONTO_PAGO      
FROM  PER_PERCE_CONSO PER, 
      MAE_CLIEN CLI,
      SEG_PAIS  PAIS	    
WHERE PER.PAIS_COD_PAIS   =  $P{codigoPais} AND
      PER.PAIS_COD_PAIS = PAIS.COD_PAIS AND
      CLI.PAIS_OID_PAIS  = PAIS.OID_PAIS  AND
      CLI.COD_CLIE       = PER.COD_CLIE	  AND
      PER.MON_PERC  > 0 AND 
      PER.FEC_DOLE >= TO_DATE ($P{fechaDesde},'dd/MM/yyyy') AND 
      PER.FEC_DOLE <= TO_DATE ($P{fechaHasta},'dd/MM/yyyy')]]></queryString>

	<field name="MONTO_PAGO" class="java.math.BigDecimal"/>

